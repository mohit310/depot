<div class="cart_title">Your Cart</div>
<table>
  <%= render(cart.line_items) %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>
<% if @order %>
    <%= button_to 'Cancel Order', :action => "cancel_order", :method => :post, :confirm => 'Are you sure you want to cancel your order?' %>
<% else %>
    <%= button_to 'Empty Cart', @cart, :method => :delete, :remote => true, :confirm => 'Are you sure you want to empty your cart?' %>
    <%= button_to "Checkout", new_order_url, :method=>:get %>
<% end %>
